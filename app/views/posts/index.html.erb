<% if user_signed_in? %>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class = "col-sm-4">
        <%= link_to post_path(post) do %>
          <div class = "thumbnail">
            <%= image_tag post.image.url %>
          </div>
          <div class = "caption">
             <h3><%= post.caption %></h3>
             <p>Posted by <%= post.user.email %> on <%= post.created_at %></p>
             <p>Likes: <%= post.likes.count %>
            <% if post.comments.any? %>
              <% post.comments.each do |comment| %>
                <p><b><%= comment.user.email %></b> <%= comment.content %>
              <% end %>
            <% end %>
          </div>
          <% end %>
       </div>
    <% end %>
  <% end %>
<% end %>
